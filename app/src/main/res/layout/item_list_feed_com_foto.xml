<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardDisciplina"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview_feed_size"
    android:layout_margin="5dp"
    card_view:cardElevation="3dp"
    card_view:cardBackgroundColor="@color/backgroundDefaultLight">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Prof. Alessandro Karppel JordÃ£o contemplado no edital PAq1/2016, mais de trinta professores selecionados."
            android:textColor="@color/colorSecundary"
            android:layout_width="match_parent"
            android:id="@+id/tv_feed_mensagem"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:maxLines="3"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="2h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_feed_tempo"
            android:textColor="@color/material_drawer_secondary_text"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            android:paddingTop="2dp"
            android:paddingRight="2dp" />

        <TextView
            android:text="- Maxmiller Alves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_feed_autor"
            android:textSize="15sp"
            android:textColor="@color/colorTextDefaultDark"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/feed_tag_padding_horizontal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/tv_feed_autor"
            android:layout_toLeftOf="@+id/tv_feed_autor"
            android:layout_below="@+id/iv_feed_imagem">

            <TextView
                android:text="CC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_feed_tag_1"
                android:elevation="2dp"
                android:paddingLeft="@dimen/feed_tag_padding_horizontal"
                android:paddingRight="@dimen/feed_tag_padding_horizontal"
                android:background="@drawable/fundo_tag_dark"
                android:layout_marginRight="@dimen/feed_tag_margin_right"
                android:textColor="@color/colorTextDefaultDark"
                android:layout_weight="0" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/iv_feed_imagem"
            android:layout_above="@+id/tv_feed_autor"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>
</android.support.v7.widget.CardView>