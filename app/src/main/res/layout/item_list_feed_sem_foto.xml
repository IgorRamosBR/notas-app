<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardDisciplina"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview_feed_size"
    android:layout_margin="5dp"
    card_view:cardElevation="3dp"
    card_view:cardBackgroundColor="@color/colorSecundary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fundo_feed_sem_foto">

        <TextView
            android:text="Prof. Alessandro Karppel JordÃ£o contemplado no edital PAq1/2016, mais de trinta professores selecionados."
            android:textColor="@color/colorTextDefaultLight"
            android:textAllCaps="true"
            android:layout_width="match_parent"
            android:id="@+id/tv_feed_mensagem"
            android:textSize="24sp"
            android:layout_height="170dp"
            android:textStyle="normal|bold"
            android:paddingLeft="@dimen/feed_title_no_photo_padding_horizontal"
            android:paddingRight="@dimen/feed_title_no_photo_padding_horizontal" />

        <TextView
            android:text="- Maxmiller Alves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_feed_autor"
            android:textSize="16sp"
            android:layout_marginRight="13dp"
            android:layout_marginEnd="13dp"
            android:layout_below="@+id/tv_feed_mensagem"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_feed_mensagem"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/tv_feed_autor"
            android:layout_toStartOf="@+id/tv_feed_autor"
            android:paddingLeft="@dimen/feed_tag_padding_horizontal">

            <TextView
                android:text="CC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_feed_tag_1"
                android:elevation="2dp"
                android:paddingBottom="@dimen/feed_tag_padding_vertical"
                android:paddingTop="@dimen/feed_tag_padding_vertical"
                android:paddingLeft="@dimen/feed_tag_padding_horizontal"
                android:paddingRight="@dimen/feed_tag_padding_horizontal"
                android:background="@drawable/fundo_tag"
                android:layout_marginRight="@dimen/feed_tag_margin_right"
                android:textColor="@color/colorTextDefaultLight"
                android:layout_weight="0" />
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>